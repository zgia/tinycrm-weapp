<template>
  <div class="container">

    <van-card>
      <view slot="thumb"
            class="avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view slot="title"
            class="nickname">
        <open-data type="userNickName"></open-data>
      </view>
      <view slot="desc">
        UID: {{ userInfo.userId }}
      </view>
      <view slot="price">
        ä¸ºMDRTåŠ æ²¹ğŸ’ª
      </view>
      <view slot="footer">
        <van-button wx:if="{{ canIUse && !userInfo.nickName }}"
                    open-type="getUserInfo"
                    bindgetuserinfo="bindGetUserInfo">æˆæƒç™»å½•</van-button>
      </view>
    </van-card>

  </div>
</template>

<script>
import wepy from '@wepy/core'
import api from '@/api/index'

wepy.page({
  components: {},

  props: {},

  data: {
    canIUse: wx.canIUse('button.open-type.getUserInfo'),
    userInfo: { userId: 0, avatarUrl: '', nickName: 'ç™½è‰³', realName: '', openId: '' }
  },

  computed: {},

  methods: {
    bindGetUserInfo(event) {
      this.userInfo = event.$wx.detail.userInfo
    },
    getUser() {
      api
        .get('api/user', {})
        .then(res => {
          this.userInfo.userId = res.data.userid
          this.userInfo.nickName = res.data.username
          this.userInfo.realName = res.data.realname
        })
        .catch(error => {
          console.error('getUser', error)
        })
    },
    onGetOpenid() {
      wx.login({
        success: res => {
          api
            .get('/api/openid', { code: res.code })
            .then(logined => {
              this.userInfo.openId = logined.data.openid
            })
            .catch(error => {
              console.error('onGetOpenid', error)
            })
        },
        fail: res => {
          console.error('onGetOpenid', res)
        }
      })
    }
  },

  created() { },

  onLoad(options) {
    this.getUser()
  }
})
</script>

